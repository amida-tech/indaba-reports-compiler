.mod-map
  position absolute
  display flex
  flex-direction column
  width 100%
  height 100%
  top 0
  left 0

.mod-map-header
  background-color $color-1
  h1
    color $color-5

  .bold
    font-weight bold

  a
    color $black
    text-decoration none

  .grid-3
    input
      margin 18px 0 0 32px
      padding 6px 30px
      border none
      color $color-1
      background-color $color-5
      margin-bottom 15px

.mod-map-map
  flex 1
  position relative

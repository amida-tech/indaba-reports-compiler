.mod-results
  header
    padding 10px 0
    background-color $color-1

  h1
    color $color-5
    font-weight bold

.mod-results-questions
  background-color $color-3
  padding 10px 0
  border-bottom 2px dotted $color-2

.mod-results-answers
  margin 30px 0
  padding-left 70px

  h3
    padding-top 10px

  .value
    position absolute
    display block
    width 40px
    left 0

    background-color $color-1
    border-radius 100%
    color $color-5
    font-size $site-font-size + 8
    font-weight bold
    line-height 40px
    text-align center
    text-transform uppercase

.mod-results-criterias
  margin 30px 0
  list-style none

  li
    margin 1em 0

  .key
    font-weight bold
    color $color-1
    text-transform uppercase

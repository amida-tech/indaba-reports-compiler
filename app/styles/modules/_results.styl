.mod-results
  font-size 14px
  line-height 1.6
  header
    padding 10px 0
    background-color $color-1

  h1
    color $color-5
    font-weight bold

.mod-results-questions
  position relative
  background-color $color-3
  padding 10px 0

  background-image: linear-gradient(to right, #656565 20%, rgba(255,255,255,0) 0%), linear-gradient(to right, #656565 20%, rgba(255,255,255,0) 0%);
  background-position: bottom, top;
  background-size: 10px 2px;
  background-repeat: repeat-x;

  text-indent -2.6%
  padding-left 93px

  h2
    display inline-block
    width 80%

  article:first-of-type &
    background-position: bottom;

.mod-results-answers
  margin 30px 0

  h3
    padding-top 10px

  p
    margin 5px 0
    word-wrap break-word

  .value-container
    display inline-block
    background-color $color-1
    color $color-5
    text-align center
    line-height 1.5
    border-radius 20px
    padding 5px 12px
    .value
      text-transform uppercase

  .reviews,
  .notes
    strong
      color $color-1

  .notes-list,
  .reviews-list
    li
      list-style none
      margin 10px 0
      h4
        font-weight 700;
        text-transform uppercase


  .table-container
    table
      width 100%
      font-size 14px
      line-height 1.5
      tbody
        tr
          th, td
            padding 7px
          th
            padding-left 5px
            font-weight 400
          td
            font-weight 300
            p
              max-width 150px
            label
              display block
              padding 3px 0

          &:nth-child(2n)
            background #f5f5f5
        &:first-child
          th, td
            &:first-child
              display table-cell
              min-width 245px





.mod-results-criterias
  margin 30px 0
  padding 0
  list-style none

  li
    margin 1em 0
    font-size 14px

  .key
    font-weight bold
    color $color-1
    text-transform uppercase

.mod-results-buttons
  display inline
  position absolute
  top 19px
  right 36px
  text-indent 0
  a
    font-size 14px
    color $color-2
    text-decoration none
    position relative
    padding-left 30px

    &:hover
      color $red

    &:first-child:before
      content ''
      display block
      position absolute
      top -3px
      left 0
      width 25px
      height 25px
      background url('../images/map-icon.png') no-repeat center

      &:before
        content ''
        display block
        position absolute
        top -3px
        left 0
        width 25px
        height 25px
        background url('../images/rank-icon.png') no-repeat center


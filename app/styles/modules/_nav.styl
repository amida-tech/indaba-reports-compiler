.layout-header

  border 0

  #headerView
    max-width 685px

.mod-nav
  position absolute
  right 0
  top 50%
  margin-top -10px

  ul
    padding 0
    list-style none

  li
    display inline-block
    margin-left 15px

  a
    color $color-2
    text-decoration none

    &:hover
      text-decoration underline

  .is-current
    border-bottom 5px solid $red

#printBtn, #embedBtn
  border 0
  padding-left 20px
  font-size 16px
  &:hover
    text-decoration underline

#embedBtn
  background none
  margin-left 6px
  &:after
    content ''
    display block
    position absolute
    top 8px
    right 57px
    width 7px
    height 7px
    border-left 3px solid #444
    border-bottom 3px solid #444
    font-size 15px
    -webkit-transform rotate(45deg)
    -moz-transform rotate(45deg)
    transform rotate(45deg)
  &:before
    content ''
    display block
    position absolute
    top 8px
    right 50px
    width 7px
    height 7px
    border-right 3px solid #444
    border-top 3px solid #444
    font-size 15px
    -webkit-transform rotate(45deg)
    -moz-transform rotate(45deg)
    transform rotate(45deg)

button[disabled]
  text-decoration none !important

#printBtn
  background transparent url('../images/print-icon_15x13.svg') no-repeat left
  background-size 15px 13px



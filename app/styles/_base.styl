body
  font-family $site-font-family
  font-size $site-font-size
  line-height $site-line-height
  text-rendering optimizeLegibility
  -webkit-font-smoothing antialiased

h1, h2, h3
  margin .67em 0

h1, h2
  font-weight normal

h1
  font-size $site-font-size + 21

h2
  font-size $site-font-size + 14

h3
  font-size $site-font-size + 2

a, input, button
  &:focus
    outline 0


@media print
  h1
    font-size $site-font-size + 7

  h2
    font-size $site-font-size + 5

  h3
    font-size $site-font-size + 2
